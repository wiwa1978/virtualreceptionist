<% if @results %>
    <table>
        <%@results.each do |r|%>
        <tr valign="top">
            <td><%=r.lastname%><%=r.firstname%><%=r.phone%></td>
            
        </tr>
        <%end%>
    </table>

    
<% end %>


<form id="enter_number" action="/sms" method="POST">
          <p>Enter your phone number:</p>
          <p><input type="text" name="phone_number" id="phone_number" value=<%=r.phone%> /></p>
          <p><input type="submit" name="submit" value="Register" /></p>
    </form>

