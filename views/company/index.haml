%table.table.table-bordered
  .control-group
    %a.btn.btn-primary{:href => "/companies/new"} Add Company
  %thead
    %tr
      %th Id
      %th Name
      %th Created
      %th Updated
      %th Actions
  %tbody
    - @companies.each do |company|
      %tr
        %td= company[:id]
        %td= company[:name]
        %td= pretty_date(company[:created_at])
        %td= pretty_date(company[:updated_at])
        %td
          %a.btn.btn-success{:href => "/companies/#{company[:id]}/employees"} Employees
          %a.btn.btn-primary{:href => "/companies/edit/#{company[:id]}"} Edit
          %a.btn.btn-danger{:href => "/companies/delete/#{company[:id]}"} Delete
