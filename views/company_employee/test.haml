%h1= @companies.name
%table.table.table-bordered
  %hr
  %a.btn.btn-primary{:href => "/companies/#{@companies.id}/employees/new"} Add Employee
  %a.btn.btn-primary{:href => "/companies/#{@companies.id}/employees/upload"} Import employees
  %a.btn.btn-primary{:href => "/companies/#{@companies.id}/employees/delete/all"} Delete all employees
  
  %hr
  %thead
    %tr
      %th Id
      %th First Name
      %th Last Name
      %th Company Name
      %th Phone
      %th Created
      %th Updated
      %th Actions
  %tbody
    - @companies.employees.each do |employee|
      %tr
        %td= employee.id
        %td= employee.firstname
        %td= employee.lastname
        %td= @companies.name
        %td= employee.phone
        %td= pretty_date(employee.created_at)
        %td= pretty_date(employee.updated_at)
        %td
          %a.btn.btn-primary{:href => "/employees/edit/#{employee[:id]}"} Edit
          %a.btn.btn-danger{:href => "/employees/delete/#{employee[:id]}"} Delete






%form.form-inline{:action => "/companies", :method => "POST", :enctype=>"multipart/form-data"}
  %input#firstname.form-control{:name => "name", :placeholder => "Company name", :type => "text"}/
  %input.filestyle{"data-buttonname" => "btn-primary", :type => "file", :name => "file"}/
  %br
  %input.btn.btn-primary{:type=>"submit",:value=>"Upload"}

  %input.btn.btn-primary{:type => "submit", :value => "Add Company"}/

