!!!
%html
  %head
    %title= title
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "/css/search.css", :rel => "stylesheet"}/
    %link{:href => "/css/login.css", :rel => "stylesheet"}/
    %link{:href => "/css/table_filter.css", :rel => "stylesheet"}/
    %link{:href => "/css/wizard.css", :rel => "stylesheet"}/
    %link{:href => "/css/logo.css", :rel => "stylesheet"}/

    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
      #todo-list li {
        border-bottom: 1px solid #333333;
        padding: 15px 0;
      }
  %body
    - if logged_in?
      .container
        .navbar.navbar-default{:role => "navigation"}
          .container-fluid
            .navbar-header
              %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "#"} Virtual Receptionist
            
            .navbar-collapse.collapse
              %ul.nav.navbar-nav
                %li
                  %a{:href => "/companies"} Companies
                %li
                  %a{:href => "/employees"} Employees
              
              - if current_user != nil
                %ul.nav.navbar-nav.navbar-right
                  %li
                    %a{:href => "/logout"} Logout #{current_user.email}
              - else
                %ul.nav.navbar-nav.navbar-right
                  %li
                    %a{:href => "/logout"} Logout
                
          
    .container
      - flash.each do |key, value|
        %div{:class => flash_class(key)}
          = styled_flash
      = yield
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    %script{:src => "/js/general.js"}
    %script{:src => "/js/bootstrap-filestyle.min.js"}
    %script{:src => "/js/table_filter.js"}
    %script{:src => "/js/wizard.js"}
    %script{:src => "//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"}



